<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ItemStyle">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="HeaderStyle" parent="TextStyle">
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
